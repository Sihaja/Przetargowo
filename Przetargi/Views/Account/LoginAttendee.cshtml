@model Przetargi.Models.LoginModel

@{
    ViewBag.Title = "Zaloguj";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
    <h2>Podaj swój login oraz swoje hasło.</h2>
</hgroup>

@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl })) {
    @Html.ValidationSummary(true, "Logowanie się nie powiodło. Proszę poprawić błędy i spróbować ponownie.")

    <fieldset>
        <legend>Formularz logowania</legend>
        <ol>
            <li>
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName)
            </li>
            <li>
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password)
            </li>
            <li>
                @Html.CheckBoxFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox" })
            </li>
        </ol>
        <input type="submit" value="Log in" />
    </fieldset>
    <p>
        @Html.ActionLink("Zarejestruj się", "Register") jeśli nie masz konta.
    </p>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
